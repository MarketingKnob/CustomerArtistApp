<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.samyotech.fabcustomer.utils.CustomTextView
            android:id="@+id/CTVartistwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="- Category -"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IVartist"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/dummyuser_image" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IVprev"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="130dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/prev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVprev"
            android:layout_alignStart="@+id/IVprev"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/prev_name"
            android:layout_marginStart="5dp">

            <RatingBar
                android:id="@+id/ratingbar_prev"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="@color/gray"
                android:progressTint="@color/colorPrimary"
                android:rating="3" />

            <com.samyotech.fabcustomer.utils.CustomTextView
                android:id="@+id/tvRating_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IVNext"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="12dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/next_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/prev_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/next_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp">

            <RatingBar
                android:id="@+id/ratingbar_next"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="@color/gray"
                android:progressTint="@color/colorPrimary"
                android:rating="3" />

            <com.samyotech.fabcustomer.utils.CustomTextView
                android:id="@+id/tvRating_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>

        <com.samyotech.fabcustomer.utils.CustomTextViewBold
            android:id="@+id/CTVartistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVNext"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="demo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CTVartistname"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="@color/gray"
                android:progressTint="@color/colorPrimary"
                android:rating="3" />

            <com.samyotech.fabcustomer.utils.CustomTextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_price"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ll_rating"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_pressed_line"
            android:gravity="center"
            android:text="Rs. 100"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_set_profile"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_below="@+id/btn_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_corner"
            android:text="Full Profile"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>
